set   autoscale                        # scale axes automatically
unset log                              # remove any log-scaling
unset label                            # remove any previous labels
set xtic auto                         	# set xtics automatically
set ytic auto                         # set ytics automatically
set ztic auto


set grid ytics lt 0.1 lw 0.1 lc rgb "#bbbbbb"
set grid xtics lt 0.1 lw 0.1 lc rgb "#bbbbbb"

#set terminal png size 2048,1356 enhanced font "Helvetica,20"
set terminal png size 1024,768 

set key right bottom

# set style fill solid 1.0

set xlabel "iterations x1000"
set ylabel "total score"
set output 'training_score_total.png'

plot '../models/a2c/result/result.log' using 1:4 title 'a2c'  with lines lw 3, \
     '../models/a2c_continuous/result/result.log' using 1:4 title 'a2c continuous'  with lines lw 3, \
     '../models/a2c_curiosity/result/result.log' using 1:4 title 'a2c + curiosity'  with lines lw 3, \
     '../models/ppo/result/result.log' using 1:4 title 'ppo'  with lines lw 3, \
     '../models/ppo_continuous/result/result.log' using 1:4 title 'ppo continuous'  with lines lw 3, \
     '../models/ppo_curiosity/result/result.log' using 1:4 title 'ppo + curiosity'  with lines lw 3, \
     '../models/ddpg/result/result.log' using 1:4 title 'DDPG'  with lines lw 3, \
     '../models/ddpg_curiosity/result/result.log' using 1:4 title 'DDPG + curiosity'  with lines lw 3



set xlabel "iterations x1000"
set ylabel "score per iteration"
set output 'training_score_per_iterations.png'

plot '../models/a2c/result/result.log' using 1:($4/$1) title 'a2c'  with lines lw 3, \
     '../models/a2c_continuous/result/result.log' using 1:($4/$1) title 'a2c continuous'  with lines lw 3, \
     '../models/a2c_curiosity/result/result.log' using 1:($4/$1) title 'a2c + curiosity'  with lines lw 3, \
     '../models/ppo/result/result.log' using 1:($4/$1) title 'ppo'  with lines lw 3, \
     '../models/ppo_continuous/result/result.log' using 1:($4/$1) title 'ppo continuous'  with lines lw 3, \
     '../models/ppo_curiosity/result/result.log' using 1:($4/$1) title 'ppo + curiosity'  with lines lw 3, \
     '../models/ddpg/result/result.log' using 1:($4/$1) title 'DDPG'  with lines lw 3, \
     '../models/ddpg_curiosity/result/result.log' using 1:($4/$1) title 'DDPG + curiosity'  with lines lw 3


set xlabel "episodes"
set ylabel "score per episode"
set output 'training_score_per_episode.png'

plot '../models/a2c/result/result.log' using 2:5 title 'a2c'  with lines lw 3, \
     '../models/a2c_continuous/result/result.log' using 2:5 title 'a2c continuous'  with lines lw 3, \
     '../models/a2c_curiosity/result/result.log' using 2:5 title 'a2c + curiosity'  with lines lw 3, \
     '../models/ppo/result/result.log' using 2:5 title 'ppo'  with lines lw 3, \
     '../models/ppo_continuous/result/result.log' using 2:5 title 'ppo continuous'  with lines lw 3, \
     '../models/ppo_curiosity/result/result.log' using 2:5 title 'ppo'  with lines lw 3, \
