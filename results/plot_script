set   autoscale                        # scale axes automatically
unset log                              # remove any log-scaling
unset label                            # remove any previous labels
set xtic auto                         	# set xtics automatically
set ytic auto                         # set ytics automatically
set ztic auto


set grid ytics lt 0.1 lw 0.1 lc rgb "#bbbbbb"
set grid xtics lt 0.1 lw 0.1 lc rgb "#bbbbbb"

#set terminal png size 2048,1356 enhanced font "Helvetica,20"
set terminal png size 1024,768 

set key right bottom

# set style fill solid 1.0

set xlabel "iterations x1000"
set ylabel "total score"
set output 'training_score_total.png'

plot '../src/models/lunar_lander_dqn/result/result.log' using 1:4 title 'DQN'  with lines lw 3 lc 'blue', \
     '../src/models/lunar_lander_a2c/result/result.log' using 1:4 title 'a2c'  with lines lw 3 lc 'green', \
     '../src/models/lunar_lander_a2c_curiosity/result/result.log' using 1:4 title 'a2c + curiosity'  with lines lw 3 lc 'red'



set xlabel "iterations x1000"
set ylabel "score per iteration"
set output 'training_score_per_iterations.png'

plot '../src/models/lunar_lander_dqn/result/result.log' using 1:($4/$1) title 'DQN'  with lines lw 3 lc 'blue', \
     '../src/models/lunar_lander_a2c/result/result.log' using 1:($4/$1) title 'a2c'  with lines lw 3 lc 'green', \
     '../src/models/lunar_lander_a2c_curiosity/result/result.log' using 1:($4/$1) title 'a2c + curiosity'  with lines lw 3 lc 'red'


set xlabel "episodes"
set ylabel "score per episode"
set output 'training_score_per_episode.png'

plot '../src/models/lunar_lander_dqn/result/result.log' using 2:5 title 'DQN'  with lines lw 3 lc 'blue', \
     '../src/models/lunar_lander_a2c/result/result.log' using 2:5 title 'a2c'  with lines lw 3 lc 'green', \
     '../src/models/lunar_lander_a2c_curiosity/result/result.log' using 2:5 title 'a2c + curiosity'  with lines lw 3 lc 'red'
